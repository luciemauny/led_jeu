int led_array[5]{1,2,3,4,5}; //changer les valeurs du tableau en fonction de leur branchement
int i =0;
void setup() {
  for (i=0; i<5; i++){
    pinMode(led_array[i], OUTPUT);
  }
    Serial.begin(9600);
}



void loop() {
  //numero_led : tableau contenant séquence de J1 provenant de NODE-RED
  //En fonction de ses valeurs allume led correspondant grace au switch
  for (i=0; i<sizeof(numero_led); i++){
    switch (numero_led[i])
    {
    case 1:
      digitalWrite(led_array[0],HIGH);
      break;
    case 2:
      digitalWrite(led_array[1],HIGH);
      break;
    case 3:
      digitalWrite(led_array[2],HIGH);
      break;
    case 4:
      digitalWrite(led_array[3],HIGH);
      break;
    case 5:
      digitalWrite(led_array[4],HIGH);
      break;
    
    default:
      break;
    }
    //variable qu'il faut incrémenter en fonction de la difficulté recherchée
    delay(temps);
 
    //Eteint la led qu'on vient d'afficher
    for (i=0; i<5; i++){
      digitalWrite(led_array[i],LOW);
    }
  }
}

  
